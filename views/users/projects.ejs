<div class="container mt-5">
    <!-- Button trigger modal -->
    <button id="addProject" type="button" class="btn btn-outline-dark mb-3" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-plus"></i> Create A Project </button>

    <button id="addProjectToUser" type="button" class="btn btn-outline-dark mb-3" data-toggle="modal" data-target="#myModal">
        Project<i class="fa fa-plus ml-2 mr-2"></i>User</button>

    <button id="addTeamToProject" type="button" class="btn btn-outline-dark mb-3" data-toggle="modal" data-target="#myModal">
        Project<i class="fa fa-plus ml-2 mr-2"></i>Team</button>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Create a project </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Close</button>
                    <button id="saveChanges" type="button" class="btn btn-outline-dark">Save</button>
                </div>
            </div>
        </div>
    </div>


    <% projects.forEach( project => {  %>
        <div class="card mt-3 mb-3 pl-3" style="background-color: #F8F7F4; box-shadow: rgba(0, 0, 0, 0.16) 0 1px 4px;">
            <div class="card-body">
                <div class="row">
                    <h1 class="card-title" style="font-family: 'Italiana', sans-serif;"><%= project.project_name %></h1>
                    <form action="<%= `/admin/delete-projects/${project.id}` %>" method="POST" class="mt-2 ml-3">
                        <button type="submit" class="btn-sm btn-outline-dark mr-3"
                                onclick="return confirm('Are you sure you want to delete this record?')">
                            <i class="fa fa-trash-o"></i>
                        </button>
                    </form>
                </div>
                <div class="row">
                    <div class="col-2">
                        Client:
                    </div>
                    <div class="col">
                        <%= project.client_name %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Project manager:
                    </div>
                    <div class="col">
                        <%= project.project_manager %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Description:
                    </div>
                    <div class="col">
                        <%= project.description ? project.description : '' %>
                    </div>
                </div>
                <div class="row mt-3">
                    <a href="/projects/<%= project.id %>" class="btn-sm btn-outline-dark">More</a>
                </div>

            </div>
        </div>
    <% });  %>
</div>

<script>
    var user_id = '<%= user_id %>';
</script>